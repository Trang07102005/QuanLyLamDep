<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beauty Salon</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        /* Logo container giống admin */
        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            justify-content: center; /* căn giữa */
            margin-bottom: 20px; /* thêm khoảng cách dưới logo */
        }

            .logo img {
                width: 55px;
                height: 55px;
                border-radius: 50%;
                box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
                border: 2px solid #FFD700; /* viền vàng */
                object-fit: cover;
            }

        .logo-text {
            display: flex;
            flex-direction: column;
            text-align: left;
        }

            .logo-text p:first-child {
                font-family: 'Playfair Display', serif;
                font-size: 1.4rem;
                font-weight: 700;
                color: #FFD700; /* vàng */
                text-transform: uppercase;
                margin: 0;
                letter-spacing: 1px;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            }

            .logo-text p:last-child {
                font-size: 0.85rem;
                color: rgba(255, 215, 0, 0.9); /* vàng nhạt hơn */
                font-weight: 400;
                text-transform: none;
                letter-spacing: 0.5px;
                margin: 0;
            }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Varela Round', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .nav-menu {
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-bottom: 2px solid #e9ecef;
        }

        .nav-menu a {
            padding: 10px 20px;
            font-size: 1.1rem;
            font-weight: 600;
            color: #666;
            text-decoration: none;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .nav-menu a:hover {
            color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        @@media (max-width: 768px) {
            .container {
                margin: 10px;
            }

            .header h1 {
                font-size: 2rem;
            }

            .nav-menu {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                <img src="~/Content/my-logo.png" alt="Beauty Salon Logo" />
                <div class="logo-text">
                    <p>Beauty Salon</p>
                    <p>Quản lý dịch vụ làm đẹp</p>
                </div>
            </div>
            
        </div>
        <div class="nav-menu">
            <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Trang chính</a>
            <a href="@Url.Action("Index", "Invoice")"><i class="fas fa-file-invoice"></i> Hóa đơn</a>
            <a href="#"><i class="fas fa-user"></i> Khách hàng</a>
            <a href="#"><i class="fas fa-spa"></i> Dịch vụ</a>
            <a href="#"><i class="fas fa-bottle-droplet"></i> Sản phẩm</a>
        </div>
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>