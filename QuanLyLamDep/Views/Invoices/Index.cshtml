@model IEnumerable<QuanLyLamDep.Models.Invoice>

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý hóa đơn - Beauty Salon</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Varela Round', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .main-content {
            padding: 30px;
            background: #f8f9fa;
        }

        .invoice-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 2px solid transparent;
            margin-bottom: 20px;
            animation: fadeIn 0.6s ease-out;
        }

        .invoice-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            border-color: #667eea;
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .invoice-name {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 5px;
        }

        .invoice-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: #e91e63;
        }

        .invoice-info {
            color: #666;
            margin-bottom: 15px;
            line-height: 1.5;
        }

        .add-btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .summary-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .summary-total {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            border-top: 2px solid #e9ecef;
            padding-top: 15px;
            margin-top: 15px;
        }

        @@media (max-width: 768px) {
            .container {
                margin: 10px;
            }

            .header h1 {
                font-size: 2rem;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-spa"></i> Beauty Salon</h1>
            <p>Quản lý hóa đơn và thanh toán</p>
        </div>

        <div class="main-content">
            <div class="summary-card">
                <h4><i class="fas fa-chart-line"></i> Tổng quan</h4>
                <div class="summary-row">
                    <span>Tổng hóa đơn:</span>
                    <span>@Model.Count()</span>
                </div>
                <div class="summary-row summary-total">
                    <span>Tổng doanh thu:</span>
                    <span>@Model.Sum(i => i.TotalAmount).ToString("N0") VNĐ</span>
                </div>
            </div>

            <div class="invoices-grid">
                @foreach (var invoice in Model)
                {
                    <div class="invoice-card">
                        <div class="invoice-header">
                            <div>
                                <div class="invoice-name">Hóa đơn #@invoice.InvoiceID</div>
                                <div class="invoice-info">Khách hàng: @invoice.Customer?.FullName</div>
                            </div>
                            <div class="invoice-price">@invoice.TotalAmount.ToString("N0") VNĐ</div>
                        </div>
                        <div class="invoice-info">
                            <p>Ngày tạo: @(invoice.CreatedDate.HasValue ? invoice.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</p>
                            <p>Trạng thái: @invoice.PaymentStatus</p>
                            <p>Phương thức: @invoice.PaymentMethod</p>
                        </div>
                        <a class="add-btn" href="@Url.Action("AddPayment", new { id = invoice.InvoiceID })">
                            <i class="fas fa-plus"></i> Thêm thanh toán
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>